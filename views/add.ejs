<%- include('partials/header') -%>
<section class="container">
<h3>Add A Journal Entry</h3>
<div class="row">
    <form action="/entries/add" method="POST" class="col s12">
        <div class="row">
            <div class="input-field">
                <input type="text" id="title" name="title">
                <label for="title">Title</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                 <select id="status" name="status">
                   <option value="public" selected>Public</option>
                    <option value="private">Private</option>
                </select>
                
                <label for="status">Status</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <h5>Tell Your Story:</h5>
                <textarea id="body" name="body"></textarea>
            </div>
        </div>

        <div class="row">
            <button type="submit" class="btn btn-dark add-btn" value="Upload">Submit</button>
            <a href="/dashboard" class="btn btn-dark add-btn">Cancel</a>
        </div>
    </form>
</div>
</section>
<%- include('partials/footer') -%>