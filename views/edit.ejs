<%- include('partials/header') -%>
<section class="container">
    <h3>Edit Journal Entry</h3>
    <div class="row">
        <form action="/entries/add" method="PUT" class="col s12">
        <input type="hidden" name="_method" value="PUT"> 
            <div class="row">
                <div class="input-field">
                    <input type="text" id="title" name="title" value="<%= entry.title %>">
                    <label for="title"></label>
                </div>
            </div>
    
            <div class="row">
                <div class="input-field">
                     <select id="status" name="status">
                       <option value="public" selected>Public</option>
                        <option value="private">Private</option>
                    </select>
                    
                    <label for="status">Status</label>
                </div>
            </div>
    
            <div class="row">
                <div class="input-field">
                    <h5>Tell Your Story:</h5>
                    <textarea id="body" name="body" value="<%= entry.body %>"></textarea>
                </div>
            </div>
    
            <div class="row">
                <button type="submit" class="btn btn-dark add-btn" value="Upload">Submit</button>
                <a href="/dashboard" class="btn btn-dark add-btn">Cancel</a>
            </div>
        </form>
    </div>
    </section>
<%- include('partials/footer') -%>