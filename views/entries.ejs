<%- include('partials/header') -%>
<!-- Image Banner -->
<img src="/imgs/dashboard-01.jpg" class="w-screen"> 
<!-- Screen Height -->
<div class="min-h-screen">
<!-- Entry Section -->
<div class="my-5 mx-5">
  <div>
    <h2 class="text-center"><%= entry.title %></h2>
  </div>
    <h4>Runner: <a href="/profile/<%=entry.user._id%>"> <%= entry.userName %></a></h4>
    <h4>Type of Run: <%= entry.runType %></h4>
    <h4>Distance: <%= entry.distance %></h4>
    <h4>Duration: <%= entry.duration %></h4>
    <h4>How was your run? How did you feel physically?</h4>
    <p><%= entry.body %></p>
    <h4>What did you think about while running?</h4>
    <p><%= entry.thoughts %></4>
    <h4>How did you feel emotionally while running?</h4>
    <p><%= entry.emotions %></p>
  <!-- Delete Post -->
    <%if(entry.user == user.id){ %>
    <form
        action="/entries/deleteEntry/<%= entry._id%>?_method=DELETE"
        method="POST"
        class="col-3"
      >
      <button class="btn btn-danger" type="submit">Delete Entry</button>
    </form>
        <% } %>
  </div>
<!-- Comment Form Section -->
  <section class="encouragement-section">
      <h2>Encouragement</h2>
      <form action="/comment/createComment/<%= entry._id%>" method="POST">
            <label for="comment" class="form-label">Comment</label>
            <input type="text" class="form-control" id="comment" name="comment">
          </div>
          <button type="submit" class="btn btn-primary comment">Submit</button>
        </form>
<!-- Display Comments-->
  <section>
    <ul class="list-group-flush">
      <% for(var i=0; i<comments.length; i++) {%>
      <li class="list-group-item display-encouragement">
<!--Add user attribution-->
      <span><%= comments[i].userName%>: <%= comments[i].comment%> </span>
<!--If comment was created by current user, then show delete button-->
      <%if(comments[i].user == user.id){ %>
      <form
         action="/comment/deleteComment/<%=entry._id%>/<%= comments[i]._id %>?_method=DELETE"
         method="POST"
        >
        <button type="submit" class="btn btn-danger fa fa-trash btn-encouragement-delete"></button>
      </form>
      <%}%>        
    </li>
        <% } %>
    </ul>
  </section>
</section>
</div>
</div>
<%- include('partials/footer') -%>
